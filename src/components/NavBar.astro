---
import yamLogo from '../assets/logos/optimized_yam.svg';
import SocialIconsOnly from './SocialIconsOnly.astro';

const { bgColor = 'bg-emergency', iconColor = 'text-tertiary' } = Astro.props;
const siteName = import.meta.env.PUBLIC_SITE_TITLE;
---
<header class="bg-emergency">
  <div class="max-w-6xl mx-auto px-4 py-4 sm:py-6 flex flex-col sm:flex-row justify-between items-center">
    <!-- Left block: Logo + Site Name -->
    <div class="flex flex-col items-center sm:flex-row sm:items-center gap-2 sm:gap-3">
      <img
        src={yamLogo.src}
        alt="YAM Logo"
        class="w-12 sm:w-16 h-auto"
      />
      <h1 class="text-darkblue text-lg sm:text-2xl font-bold text-center sm:text-left">
        {siteName}
      </h1>
    </div>

    <!-- Right block: Social + Nav -->
    <div class="flex flex-col items-center sm:items-end gap-2 sm:gap-3">
      <SocialIconsOnly bgColor={bgColor} iconColor={iconColor} />
      <nav class="flex space-x-4">
        <a href="#hero" class="text-bg font-semibold hover:text-primary hover:no-underline">Home</a>
        <a href="#about" class="text-bg font-semibold hover:text-primary hover:no-underline">About</a>
        <a href="#contact" class="text-bg font-semibold hover:text-primary hover:no-underline">Contact</a>
      </nav>
    </div>
  </div>
</header>
