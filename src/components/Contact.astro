---
import family75 from '../assets/marketing/family75.jpg';
const { contactEmail } = Astro.props;
---
<section id="contact" class="py-12 px-4 bg-gray-100 text-center w-full">
  <div class="flex flex-col md:flex-row items-center justify-center gap-6 max-w-4xl mx-auto">
    <img
      src={family75.src}
      alt="Family lifestyle photo, mom and daughter"
      class="w-36 md:w-48 h-auto rounded shadow-md"
    />

    <div class="text-center">
      <h3 class="text-xl md:text-2xl font-semibold text-secondary mb-2">Get in Touch</h3>

      <h4 class="text-sm text-gray-600 mb-2">
        Telemedicine Visits: 11am–10pm, Monday–Friday
      </h4>

      <p class="text-sm text-gray-600 mb-1">
        Phone: <a href="tel:7022591228" class="font-semibold text-secondary hover:text-primary">702-259-1228</a>
      </p>
      <p class="text-sm text-gray-600">
        Email:
        <a href={"mailto:" + contactEmail} class="text-secondary font-semibold hover:text-primary hover:no-underline">
          {contactEmail}
        </a>
      </p>
    </div>
  </div>
</section>
