---
import QRCodeBlock from "./QRCodeBlock.astro";
import family75 from "../assets/marketing/family75.jpg";
import ContactForm from "./ContactForm.astro";

const { telephone, fax, schedulingLink } = Astro.props;
---

<!-- Outer wrapper -->
<div class="mx-auto mt-2.5 max-w-4xl px-4">
  <!-- Aligned block: Contact + Image -->
  <div
    class="mx-auto mb-8 flex w-full max-w-[36rem] flex-col items-center sm:flex-row sm:justify-center sm:gap-8"
  >
    <!-- Get in Touch block -->
    <div class="flex w-full flex-col items-center text-center">
      <h2 class="mb-2 text-2xl font-bold text-secondary">Get in Touch</h2>

      <p class="mb-1">
        Phone:
        <a
          class="font-semibold text-secondary hover:text-primary hover:no-underline"
          href={`tel:${telephone}`}
        >
          {telephone}
        </a>
      </p>
      <p class="mb-4">
        Fax:
        <a
          class="font-semibold text-secondary hover:text-primary hover:no-underline"
          href={`fax:${fax}`}
        >
          {fax}
        </a>
      </p>

      <a
        href={schedulingLink}
        class="mb-4 inline-block font-semibold text-secondary hover:text-primary hover:no-underline"
      >
        ðŸ“… Book an Appointment
      </a>

      <!-- QR section -->
      <div class="scale-[0.8] sm:scale-100">
        <QRCodeBlock />
      </div>
    </div>

    <!-- Family image -->
    <img
      src={family75.src}
      alt="Family"
      class="mx-auto w-[30%] rounded shadow-lg sm:m-0 sm:w-[220px] sm:max-w-[240px]"
    />
  </div>

  <!-- Email Form (same max width) -->
  <div class="mx-auto w-full max-w-[36rem]">
    <ContactForm />
  </div>
</div>
