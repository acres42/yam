---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServicesIsland from "@/components/ServicesIsland";
import hello_there from "../assets/hero/hello_there.jpg";
import { CommercialInsurance } from "@/components/CommercialInsurance";
import { SITE } from "../config/site";

const { scheduling } = SITE;
---

<head>
  <title>Nevada Adolescent Telehealth | Young Adult Medicine</title>
  <meta
    name="description"
    content="Statewide Nevada telehealth for adolescents and young adults. Compassionate, affirming care for reproductive health, mental health, and sports physicals."
  />
  <link rel="canonical" href="https://www.youngadultmedicine.com/" />
  <meta
    property="og:title"
    content="Nevada Adolescent Telehealth | Young Adult Medicine"
  />
  <meta
    property="og:description"
    content="Statewide Nevada telehealth for adolescents and young adults. Compassionate, affirming care for reproductive health, mental health, and sports physicals."
  />
  <meta property="og:url" content="https://www.youngadultmedicine.com/" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content={hello_there.src} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta
    name="twitter:title"
    content="Nevada Adolescent Telehealth | Young Adult Medicine"
  />
  <meta
    name="twitter:description"
    content="Statewide Nevada telehealth for adolescents and young adults. Compassionate, affirming care for reproductive health, mental health, and sports physicals."
  />
  <meta name="twitter:image" content={hello_there.src} />
</head>

<BaseLayout title="Nevada Adolescent Telehealth | Young Adult Medicine">
  <section
    id="hero"
    class="bg-cover bg-right px-4 py-10 text-center text-bg sm:py-14 md:py-20"
    style={`background-image: url(${hello_there.src})`}
  >
    <img
      src={hello_there.src}
      alt="Nevada telehealth adolescent medicine visit"
      class="sr-only"
      aria-hidden="true"
    />
    <div
      class="mx-auto max-w-3xl rounded-md bg-black/50 px-4 py-6 sm:px-6 sm:py-8 md:px-8 md:py-12"
    >
      <h1 class="mb-3 text-2xl font-extrabold sm:text-3xl md:text-4xl">
        Young Adult Medicine
      </h1>
      <p class="mb-6 text-base sm:text-lg md:text-xl">
        Compassionate, affirming care for patients from 5&#45;21+.<br />
        In person visits: {SITE.address}<br />
        Telehealth visits available in ALL of Nevada.
      </p>
      <a
        href={scheduling}
        target="_blank"
        class="inline-block rounded bg-bg px-5 py-2.5 font-semibold text-secondary shadow transition hover:text-primary sm:px-6 sm:py-3"
      >
        Book an Appointment
      </a>
    </div>
  </section>
  <CommercialInsurance />
  <ServicesIsland client:load />
</BaseLayout>
