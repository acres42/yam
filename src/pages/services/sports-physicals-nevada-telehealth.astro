---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FAQJsonLd from "@/components/FAQJsonLd";
import { sportsPhysicalFAQs as faqs } from "../../types/content";
import BreadcrumbJsonLd from "@/components/BreadcrumbJsonLd";

const canonical =
  "https://www.youngadultmedicine.com/services/sports-physicals-nevada-telehealth";
export const page = {
  title: "Sports Physicals",
  description:
    "Convenient pre-participation sports physicals by telehealth across Nevada, when clinically appropriate.",
};
---

<BaseLayout
  title="Sports Physicals by Telehealth in Nevada | Young Adult Medicine"
  description="Convenient sports physicals for adolescents via telehealth across Nevada, when clinically appropriate."
  canonical={canonical}
>
  <BreadcrumbJsonLd
    items={[
      { name: "Home", url: "https://www.youngadultmedicine.com/" },
      { name: "Services", url: "https://www.youngadultmedicine.com/services" },
      { name: "Sports Physicals", url: canonical },
    ]}
  />
  <section class="mx-auto max-w-3xl px-4 py-16">
    <h1 class="mb-6 text-4xl font-bold">
      Sports Physicals - Nevada Telehealth
    </h1>
    <!-- content -->
    <section aria-labelledby="faq-heading" class="mt-10 text-left">
      <h2 id="faq-heading" class="mb-4 text-2xl font-semibold">
        Frequently asked questions
      </h2>
      <dl class="space-y-6">
        {
          faqs.map(({ q, a }) => (
            <div>
              <dt class="font-medium text-gray-900">{q}</dt>
              <dd class="mt-1 text-gray-700">{a}</dd>
            </div>
          ))
        }
      </dl>
    </section>
    <FAQJsonLd faqs={[...faqs]} canonical={canonical} />
  </section>
</BaseLayout>
