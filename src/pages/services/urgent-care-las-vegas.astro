---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FAQJsonLd from "@/components/FAQJsonLd";
import BreadcrumbJsonLd from "@/components/BreadcrumbJsonLd";
import { SITE } from "../../config/site";

const { scheduling } = SITE;

const canonical =
  "https://www.youngadultmedicine.com/services/urgent-care-las-vegas";

const faqs = [
  {
    q: "Do you offer urgent care by telehealth in Las Vegas?",
    a: "Yes. We provide same‑day and next‑day virtual urgent care for teens and young adults in Las Vegas and across Nevada, when clinically appropriate.",
  },
  {
    q: "What kinds of urgent issues can be handled virtually?",
    a: "Many common concerns are appropriate: rashes, pink eye, mild injuries, medication refills, UTIs, and care guidance. If an in‑person exam or testing is needed, we’ll direct you to the right setting.",
  },
  {
    q: "What ages do you see?",
    a: "Typically ages 11–21. If you’re unsure whether your concern is appropriate for telehealth, contact us and we’ll help you decide.",
  },
];
---

<BaseLayout
  title="Urgent Care — Las Vegas (Telehealth) | Young Adult Medicine"
  description="Same‑day and next‑day telehealth urgent care for teens and young adults in Las Vegas. Compassionate, evidence‑based guidance—statewide in Nevada."
  canonical={canonical}
>
  <BreadcrumbJsonLd
    items={[
      { name: "Home", url: "https://www.youngadultmedicine.com/" },
      { name: "Services", url: "https://www.youngadultmedicine.com/services" },
      { name: "Urgent Care — Las Vegas", url: canonical },
    ]}
  />

  <section class="mx-auto max-w-3xl px-4 py-16">
    <div class="stack-16">
      <!-- Hero -->
      <header>
        <h1 class="text-4xl font-bold text-secondary">
          Urgent Care — Las Vegas
        </h1>
        <p class="mt-6 text-lg text-gray-700">
          Fast, convenient telehealth for urgent—but non‑emergency—concerns in
          Las Vegas. We serve adolescents and young adults (ages 11–21) with
          clear guidance and a plan.
        </p>
      </header>

      <!-- What we can handle virtually -->
      <section>
        <h2 class="mb-4 text-2xl font-semibold">
          What we can treat by telehealth
        </h2>
        <ul class="list-disc space-y-1 pl-6 text-gray-800">
          <li>Rashes, pink eye, minor skin concerns</li>
          <li>Mild respiratory or GI symptoms (when safe for virtual care)</li>
          <li>UTI symptoms (assessment and treatment plan as appropriate)</li>
          <li>
            Medication questions and refills (when clinically appropriate)
          </li>
          <li>Injury triage and next‑step guidance</li>
        </ul>
      </section>

      <!-- When to go in-person / emergency -->
      <section>
        <h2 class="mb-4 text-2xl font-semibold">
          When in‑person or emergency care is needed
        </h2>
        <p class="text-gray-800">
          Severe pain, trouble breathing, chest pain, dehydration, head injury,
          or any rapidly worsening symptoms require in‑person evaluation. Call
          911 for emergencies.
        </p>
      </section>

      <!-- How it works -->
      <section>
        <h2 class="mb-4 text-2xl font-semibold">How a visit works</h2>
        <ol class="list-decimal space-y-2 pl-6 text-gray-800">
          <li>
            Book online via our
            <a class="underline" href={scheduling}>scheduling portal</a>.
          </li>
          <li>Complete secure intake forms sent after booking.</li>
          <li>
            Join your video visit from a private, well‑lit location in Nevada.
          </li>
        </ol>
      </section>

      <!-- CTA -->
      <div>
        <a
          href={scheduling}
          class="focus:ring-secondary/40 inline-flex items-center gap-2 rounded-lg bg-secondary px-6 py-3 font-semibold text-white shadow transition hover:bg-primary focus:outline-none focus:ring-2"
          aria-label="Schedule a telehealth urgent care appointment in Las Vegas"
        >
          Schedule urgent care
        </a>
      </div>

      <!-- Related services -->
      <aside class="rounded-xl bg-gray-50 p-6 shadow-sm ring-1 ring-gray-200">
        <h2 class="mb-4 text-2xl font-semibold">Related services</h2>
        <ul class="list-disc space-y-2 pl-6 text-gray-800">
          <li>
            <a
              class="underline"
              href="/services/teen-young-adult-healthcare-las-vegas"
              >Teen & Young Adult Healthcare — Las Vegas</a
            >
          </li>
          <li>
            <a class="underline" href="/services/pediatric-telehealth-nevada"
              >Pediatric Telehealth — Nevada</a
            >
          </li>
          <li>
            <a class="underline" href="/services/adolescent-medicine-nevada"
              >Adolescent Medicine — Nevada</a
            >
          </li>
        </ul>
      </aside>

      <!-- FAQ -->
      <section aria-labelledby="faq-heading">
        <h2 id="faq-heading" class="mb-6 text-2xl font-semibold">
          Frequently asked questions
        </h2>
        <dl class="space-y-6">
          {
            faqs.map(({ q, a }) => (
              <div>
                <dt class="font-medium text-gray-900">{q}</dt>
                <dd class="mt-1 text-gray-700">{a}</dd>
              </div>
            ))
          }
        </dl>
      </section>

      <!-- Back link with divider -->
      <div class="border-t border-gray-200 pt-6">
        <p class="text-sm">
          <a class="underline" href="/services">← Back to all services</a>
        </p>
      </div>
    </div>

    <!-- JSON-LD -->
    <FAQJsonLd faqs={faqs} canonical={canonical} />
  </section>
</BaseLayout>
