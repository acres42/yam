---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FAQJsonLd from "@/components/FAQJsonLd";
import BreadcrumbJsonLd from "@/components/BreadcrumbJsonLd";
import { SITE } from "../../config/site";

const { scheduling } = SITE;

const canonical =
  "https://www.youngadultmedicine.com/services/telehealth-medicine";

const faqs = [
  {
    q: "Do you offer telehealth across all of Nevada?",
    a: "Yes. We provide adolescent and young adult care statewide via secure telehealth.",
  },
  {
    q: "Who is eligible for telehealth visits?",
    a: "Patients age 11–21 for a range of concerns including reproductive health, mental health evaluations, medication management, and more.",
  },
  {
    q: "How do I schedule?",
    a: "Click the button above to schedule an appointment. We can't wait to see you!",
  },
];
---

<BaseLayout
  title="Telehealth Medicine for Teens & Young Adults in Nevada | Young Adult Medicine"
  description="Convenient, compassionate telehealth medicine for adolescents and young adults across Nevada. Appointments for reproductive health, mental health evaluations, medication management, and more."
  canonical={canonical}
>
  <!-- Breadcrumb JSON-LD -->
  <BreadcrumbJsonLd
    items={[
      { name: "Home", url: "https://www.youngadultmedicine.com/" },
      { name: "Services", url: "https://www.youngadultmedicine.com/services" },
      { name: "Telehealth Medicine", url: canonical },
    ]}
  />

  <section class="mx-auto max-w-3xl px-4 py-16">
    <div class="stack-16">
      <!-- Hero -->
      <header>
        <h1 class="mb-6 text-4xl font-bold text-secondary">
          Telehealth Medicine — Nevada
        </h1>
        <p class="text-lg text-gray-700">
          Statewide virtual care for adolescents and young adults (ages 11–21).
          Secure video visits for common concerns, follow-ups, and
          guidance—without the travel or wait rooms.
        </p>
      </header>

      <!-- How it works -->
      <section>
        <h2 class="mb-4 text-2xl font-semibold">How a visit works</h2>
        <ol class="list-decimal space-y-2 pl-6 text-gray-800">
          <li>
            Schedule an appointment from our <a
              class="underline"
              href={scheduling}
            >
              online scheduling portal
            </a>
          </li>
          <li>Complete secure forms online (sent after you book).</li>
          <li>
            Join your video visit from any private, well‑lit location in Nevada.
          </li>
        </ol>
      </section>

      <!-- Fit -->
      <section>
        <h2 class="mb-4 text-2xl font-semibold">
          Is telehealth right for this concern?
        </h2>
        <p class="text-gray-800">
          Many concerns are a great fit for virtual care. If an in‑person exam
          is needed, we’ll explain next steps and help coordinate appropriate
          follow‑up.
        </p>
      </section>

      <!-- CTA -->
      <div>
        <a
          href={scheduling}
          class="focus:ring-secondary/40 inline-flex items-center gap-2 rounded-lg bg-secondary px-6 py-3 font-semibold text-white shadow
               transition hover:bg-primary focus:outline-none focus:ring-2"
        >
          Schedule a telehealth appointment
        </a>
      </div>

      <!-- Related services -->
      <aside class="rounded-xl bg-gray-50 p-6 shadow-sm ring-1 ring-gray-200">
        <h2 class="mb-4 text-2xl font-semibold">Related services</h2>
        <ul class="list-disc space-y-2 pl-6 text-gray-800">
          <li>
            <a class="underline" href="/services/adolescent-medicine-nevada"
              >Adolescent Medicine (Nevada)</a
            >
          </li>
          <li>
            <a
              class="underline"
              href="/services/medication-management-nevada-telehealth"
              >Medication Management (Telehealth)</a
            >
          </li>
          <li>
            <a
              class="underline"
              href="/services/mental-health-evaluations-nevada-telehealth"
              >Mental Health Evaluations (Telehealth)</a
            >
          </li>
        </ul>
      </aside>

      <!-- FAQ -->
      <section aria-labelledby="faq-heading">
        <h2 id="faq-heading" class="mb-6 text-2xl font-semibold">
          Frequently asked questions
        </h2>
        <dl class="space-y-6">
          {
            faqs.map(({ q, a }) => (
              <div>
                <dt class="font-medium text-gray-900">{q}</dt>
                <dd class="mt-1 text-gray-700">{a}</dd>
              </div>
            ))
          }
        </dl>
      </section>

      <!-- Back link with divider so it never feels cramped -->
      <div class="border-t border-gray-200 pt-6">
        <p class="text-sm">
          <a class="underline" href="/services">← Back to all services</a>
        </p>
      </div>
    </div>

    <!-- JSON-LD stays outside visual flow -->
    <FAQJsonLd faqs={faqs} canonical={canonical} />
  </section>
</BaseLayout>
