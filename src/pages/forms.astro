---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formsData } from "@/types/content";
import { SITE } from "../config/site";
---

<BaseLayout
  title="Patient Forms | Young Adult Medicine (Nevada Telehealth)"
  description="Download patient forms for Young Adult Medicine. Email or fax completed forms. Serving adolescents and young adults across Nevada via telehealth."
  canonical="https://www.youngadultmedicine.com/forms/"
>
  <section class="mx-auto max-w-3xl px-4 py-16 text-center">
    <h1 class="mb-4 text-4xl font-bold text-secondary">
      Patient Forms â€” Nevada Adolescent Telehealth
    </h1>
    <div class="rounded-xl bg-primary px-4 py-6 text-center">
      <p class="mb-6 text-center text-lg text-gray-700">
        You can download and complete any of our forms below.
        <br />
        <span class="font-semibold"
          >Email or fax completed forms to us at your convenience.</span
        >
      </p>
      <ul
        class="flex flex-col items-center justify-center space-y-4 text-center"
      >
        {
          formsData.map(({ label: label, file }) => (
            <li>
              <a
                href={`/forms/${file}`}
                target="_blank"
                rel="noopener noreferrer"
                class="mx-auto inline-flex items-center gap-2 rounded bg-secondary px-6 py-3 font-semibold text-white shadow transition hover:bg-primary"
              >
                ðŸ“„ Download {label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="mt-8 text-center text-sm italic text-gray-600">
      Phone: {SITE.phone} Â· Fax: {SITE.fax}
    </div>
  </section>
</BaseLayout>
