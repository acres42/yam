const title = import.meta.env.PUBLIC_SITE_TITLE;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-bg font-sans text-text">
    <!-- Main Content -->
    <main>
      <NavBar />
      <slot />
      <TebraWidget />
      <SocialIcons />
    </main>

    <!-- Footer -->
    <footer class="mt-0 bg-secondary py-4 text-white">
