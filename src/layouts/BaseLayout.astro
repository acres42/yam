---
import "../styles/global.css";
import NavBar from "../components/NavBar";
import SocialIcons from "../components/SocialIcons";
import TebraWidget from "../components/TebraWidget.astro";
import SiteJsonLd from "@/components/SiteJsonLd";
import { SITE } from "../config/site";

const {
  title = SITE.title,
  description = SITE.description ?? "Young Adult Medicine, PLLC",
  canonical = SITE.url,
  ogImage = "/og-default.jpg",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Young Adult Medicine, PLLC" />
    <meta name="publisher" content="Young Adult Medicine, PLLC" />
    <meta
      name="keywords"
      content="pediatrics, adolescent medicine, young adult care, teen health, Las Vegas, Nevada, pediatric specialist, adolescent specialist, statewide telehealth"
    />
    <meta property="og:locale" content="en_US" />
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage ?? "/og-default.jpg"} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage ?? "/og-default.jpg"} />
    <SiteJsonLd />
  </head>

  <body class="bg-bg font-sans text-text">
    <main>
      <NavBar client:load />
      <slot />
      <TebraWidget />
      <SocialIcons />
    </main>

    <footer class="mt-0 bg-secondary py-4 text-white">
      <div class="mx-auto max-w-6xl px-4 text-center text-sm">
        &copy; {new Date().getFullYear()} Young Adult Medicine, PLLC. All Rights
        Reserved.
      </div>
    </footer>
  </body>
</html>
