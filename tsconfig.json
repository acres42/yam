{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["astro/astro-jsx"]
  },
  "include": [
    ".astro/types.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
